modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libxcrypt", "pkg-config", "qhull", "tcl", "tk", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Calculus Visualizer Desktop"

[[workflows.workflow]]
name = "Calculus Visualizer Desktop"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_desktop.py"

[[ports]]
localPort = 5000
externalPort = 80
